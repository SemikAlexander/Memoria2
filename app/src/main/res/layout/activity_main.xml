<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.memoria2.views.CustomTextView
        android:id="@+id/app_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@string/application_name"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_game"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="@string/start_game"
        android:layout_below="@+id/app_name_textView"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/large_text_size"
        android:fontFamily="@font/f20610"
        android:background="@drawable/rounding_button"
        style="?android:attr/borderlessButtonStyle"/>

    <LinearLayout
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/start_game"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_centerHorizontal="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/easy_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="50dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            android:tag="easy"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:layout_marginRight="@dimen/margin_between_menu"
            app:icon="@drawable/ic_easy_star"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/medium_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="50dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            android:tag="medium"
            android:backgroundTint="?attr/colorSecondary"
            android:layout_marginLeft="@dimen/margin_between_menu"
            android:layout_marginRight="@dimen/margin_between_menu"
            app:icon="@drawable/ic_medium_star"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hard_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="50dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            android:tag="hard"
            android:backgroundTint="?attr/colorSecondary"
            android:layout_marginLeft="@dimen/margin_between_menu"
            app:icon="@drawable/ic_hard_star"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/difficulty"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_centerHorizontal="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/football"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="50dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            android:tag="football"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:layout_marginRight="@dimen/margin_between_menu"
            app:icon="@drawable/ic_sports_soccer"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/race"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="50dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            android:tag="race"
            android:backgroundTint="?attr/colorSecondary"
            android:layout_marginLeft="@dimen/margin_between_menu"
            android:layout_marginRight="@dimen/margin_between_menu"
            app:icon="@drawable/ic_sports_motorsports"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/animals"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="50dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            android:tag="animals"
            android:backgroundTint="?attr/colorSecondary"
            android:layout_marginLeft="@dimen/margin_between_menu"
            app:icon="@drawable/ic_pets"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/app_mode"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="50dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="35dp"
        android:tag="easy"
        android:backgroundTint="?attr/colorSecondaryVariant"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/moon"
        android:scaleType="centerCrop"/>

</RelativeLayout>