<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Memoria2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/day_theme_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/day_theme_rounding_color</item>
        <item name="colorSecondaryVariant">@color/day_theme_selected_rounding_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/day_theme_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Memoria2Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/night_theme_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_theme_rounding_color</item>
        <item name="colorSecondaryVariant">@color/night_theme_selected_rounding_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/night_theme_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>